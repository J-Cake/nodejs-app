{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "esnext",
        "moduleResolution": "NodeNext",
        "sourceMap": true,
        "declaration": true,
        "declarationDir": "build/lib",
        "outDir": "build/ts",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "strict": true,
        "rootDir": "."
    },
    "include": [
        "run.js",
        "src"
    ],
    "exclude": [
        "build"
    ]
}
