    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\build\\run.js",
            "cwd": "${workspaceFolder}",
            "args": ["--log-level", "debug", "--root", "../pages"],
            "preLaunchTask": {
                "script": "build:package.json",
                "type": "npm"
            }
        }
    ]
}